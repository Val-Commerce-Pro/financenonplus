// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // provider = "sqlite"
  // url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model ShopPluginCredentials {
  id                     Int                     @id @default(autoincrement())
  shop                   String                  @unique
  username               String
  vendorId               String
  clientId               String
  apiKey                 String
  passwort               String
  hash                   String
  appMode                Boolean                 @default(false)
  ShopPluginConfigurator ShopPluginConfigurator?
}

model ShopPluginConfigurator {
  id                      Int                   @id @default(autoincrement())
  shop                    String                @unique
  appMode                 Boolean               @default(false)
  minOrderValue           String
  terms                   String
  zeroPercent             String
  interestRate            String
  promotionalInterestRate String
  shopCredentialsId       Int                   @unique
  ShopPluginCredentials   ShopPluginCredentials @relation(fields: [shopCredentialsId], references: [id])
}

model ConsorsEfiNotifications {
  id             Int     @id @default(autoincrement())
  draftOrderId   String? @unique
  draftOrderName String? @unique
  orderId        String? @unique
  orderName      String? @unique
  transactionId  String? @unique
  status         String?
  statusDetail   String?
  campaign       String?
  creditAmount   String?
}
