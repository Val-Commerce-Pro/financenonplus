// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // provider = "sqlite"
  // url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model ShopPluginCredentials {
  id                     Int                     @id @default(autoincrement())
  shop                   String                  @unique
  username               String
  vendorId               String
  clientId               String
  apiKey                 String
  passwort               String
  hash                   String
  appMode                Boolean                 @default(false)
  ShopPluginConfigurator ShopPluginConfigurator?
}

model ShopPluginConfigurator {
  id                      Int                   @id @default(autoincrement())
  shop                    String                @unique
  appMode                 Boolean               @default(false)
  minOrderValue           Int                   @default(100)
  terms                   String
  zeroPercent             String
  interestRate            String
  promotionalInterestRate Int                   @default(0)
  ShopPluginCredentials   ShopPluginCredentials @relation(fields: [shop], references: [shop])
}

model ConsorsEfiNotifications {
  id             Int    @id @default(autoincrement())
  order_id       String @unique //Draft Order Id
  transaction_id String @unique
  status         String
  status_detail  String
  campaign       String
  creditAmount   String
}
